<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.jacobpaton.mlga.WashingActivity">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startLoadButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="00:00:00"
        android:textSize="30pt"/>

    <Button
        android:id="@+id/startLoadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="startLoad" />

    <Button
        android:id="@+id/skipToTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/startLoadButton"
        android:layout_below="@+id/startLoadButton"
        android:onClick="skipToTen" />

</RelativeLayout>
